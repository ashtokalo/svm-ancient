 ;    Этот модуль содержит четыри процедуры, с помощью которых вы сможете
 ; получать и устанавливать дату и время на компьютере.
 ;
 ; Список процедур доступных для вызова:
 ;    GetDate       - получить текущую дату
 ;    GetTime       - получить текущее время
 ;    SetDate       - установить текущую дату
 ;    SetTime       - установить текущее время
 ;
 ;    Чтобы использовать этот модуль вы должны вставить в свою программу
 ; следующюю строку: INCLUDE Time.inc   или добавить через запятую, если
 ; директива INCLUDE уже где-то использовалась.
 ;---------------------------------------------------------------------------

 ;---------------------------------------------------------------------------
 ; GetDate - получить текущую дату
 ;---------------------------------------------------------------------------
 ; Вход:
 ;  нет
 ; Выход:
 ;  BX - год
 ;  CL - месяц
 ;  CH - день
 ;  DL - день недели
 ; Регистры:
 ;  BX,CL,CH,DL
 ;---------------------------------------------------------------------------
 PROC GetDate
  PUSH LAX
  MOV  LAX, 0
  CSP  0
  POP  LAX
  RET

 ;---------------------------------------------------------------------------
 ; GetTime - получить текущее время
 ;---------------------------------------------------------------------------
 ; Вход:
 ;  нет
 ; Выход:
 ;  BL - часы
 ;  BH - минуты
 ;  CL - секунды
 ;  CH - 100-е доли секунды
 ; Регистры:
 ;  BX,CX
 ;---------------------------------------------------------------------------
 PROC GetTime
  PUSH LAX
  MOV  LAX, 1
  CSP  0
  POP  LAX
  RET

 ;---------------------------------------------------------------------------
 ; SetDate - установить текущую дату
 ;---------------------------------------------------------------------------
 ; Вход:
 ;  BX - год
 ;  CL - месяц
 ;  CH - день
 ; Выход:
 ;  нет
 ; Регистры:
 ;  BX,CX
 ;---------------------------------------------------------------------------
 PROC SetDate
  PUSH LAX
  MOV  LAX, 2
  CSP  0
  POP  LAX
  RET

 ;---------------------------------------------------------------------------
 ; SetTime - установить текущее время
 ;---------------------------------------------------------------------------
 ; Вход:
 ;  BL - часы
 ;  BH - минуты
 ;  CL - секунды
 ;  CH - 100-е доли секунды
 ; Выход:
 ;  нет
 ; Регистры:
 ;  BX,CX
 ;---------------------------------------------------------------------------
 PROC SetTime
  PUSH LAX
  MOV  LAX, 3
  CSP  0
  POP  LAX
  RET

